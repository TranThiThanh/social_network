<li id="post<%= post.id %>">
  <%= image_tag post.user.avatar %>
  <span class="user"><%= link_to post.user.full_name, post.user %></span>
  <span class="content"><%= post.content %></span>
  <table>
    <% post.image.each do |image| %>
      <th class="set-size">
        <%= image_tag image.name_image, class: "test" %>
      </th>
    <% end %>
  </table>
  <span class="options">
    <% if post.user == current_user %>
      <%= link_to t("comment.edit"), t("group.js"), class: "edit_link" %> |
      <%= link_to t("group.post_delete"), post_path(post),
        data: {confirm: t("group.confirm_delete")}, method: :delete %>
      <div class="edit_form">
        <%= render "shared/edit_form", post: post %>
      </div>
    <% end %>
  </span>
  <span class="timestamp">
    <%= t "group.post" %> <%= time_ago_in_words(post.created_at) %>
      <%= t "group.ago" %>
  </span>
  <section class="comments">
    <ul>
      <% post.comment.each do |comment| %>
        <li>
          <div class="comment-info-wrapper">
            <%= image_tag comment.user.avatar %>
            <div>
              <h5 class="comment"><%= link_to "#{comment.user.full_name}",
                comment.user %></h5>
              <div class="content"><h4><%= comment.content %></h4></div>
              <div class="date-post">
                <%= render "shared/date", obj: comment %>
              </div>
            </div>
          </div>
          <span class="edit-delete-container">
            <% if comment.belongs_to?(current_user) %>
              | <%= link_to t("comment.edit"), t("group.js"),
                class: "edit_comment" %> |
              <%= link_to "delete", comment_path(post_id: post.id,
                id: comment.id), method: :delete,
                data: {confirm: t("group.confirm_comment")},
                class: "edit-delete" %>
              <div class="edit_form">
                <%= render "shared/edit_comment_form", comment: comment %>
              </div>
            <% end %>
          </span>
        </li>
      <% end %>
    </ul>
    <%= render "shared/comment_form", post: post %>
  </section>
</li>
