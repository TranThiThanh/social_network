<div class="container">
  <div class="banner font-family">
    <div class="cover">
      <div class= "cover-img">
        <%= image_tag @group.cover %>
      </div>
      <div class="profile-img">
        <%= image_tag @group.avatar %>
      </div>
      <div class= "upload">
        <% if logged_in? %>
          <%= form_for @group_user, url: group_users_path, remote: true do |f| %>
            <%= f.hidden_field :group_id %>
            <% unless current_user.id == @group.owner_id %>
              <%= f.submit t("group.join"), class: "btn btn-success" %>
              <div class="btn btn-success">
                <%= link_to t("group.leave"), group_user_path(current_user),
                  data: {confirm: t("group.confirm_leave")}, method: :delete %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="cover-name">
        <h1><%= link_to @group.name_group %></h1>
      </div>
      <div class="menu_nav">
          <ul>
            <li class="active">
              <%= link_to t("layouts.home"), "#" %>
            </li>
            <li>
              <%= link_to t("group.member"), "#" %>
            </li>
            <li>
              <%= link_to t("layouts.about"), about_path %>
            </li>
            <li>
              <%= link_to t("layouts.contact"), "#" %>
            </li>
          </ul>
          <div class="clr"></div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="row">
      <div class="gadget">
        <h2 class="star"><span><%= t"group.profile" %></span></h2>
        <div class="panel panel-default">
          <div class="panel-heading">
            <a href="#faq-1-1" data-parent="#faq-list-1" data-toggle="collapse"
              class="accordion-toggle" aria-expanded="true">
              <i class="pull-right ace-icon fa fa-chevron-down"
                data-icon-hide="ace-icon fa fa-chevron-down"
                data-icon-show="ace-icon fa fa-chevron-left"></i>
              <i class="ace-icon fa fa-user bigger-130"></i>
              <%= t "group.name_group" %>
            </a>
          </div>
          <div class="panel-collapse collapse in" id="faq-1-1"
            aria-expanded="true">
            <div class="panel-body">
              <%= @group.name_group %>
            </div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            <a href="#faq-1-3" data-parent="#faq-list-1" data-toggle="collapse" class="accordion-toggle collapsed" aria-expanded="false">
              <i class="ace-icon fa fa-chevron-left pull-right" data-icon-hide="ace-icon fa fa-chevron-down" data-icon-show="ace-icon fa fa-chevron-left"></i>
              <i class="ace-icon fa fa-credit-card bigger-130"></i>
              <%= t "group.description" %>
            </a>
          </div>
          <div class="panel-collapse collapse" id="faq-1-3"
            aria-expanded="false">
            <div class="panel-body">
              <%= @group.description %>
            </div>
          </div>
        </div>
      </div>
      <div class="gadget">
        <h2 class="star"><span><%= t "users.invite" %></span></h2>
        <div class="panel panel-default">
          <div class="panel-heading">
            <a href="#faq-1-2" data-parent="#faq-list-1" data-toggle="collapse"
              class="accordion-toggle collapsed" aria-expanded="false">
              <i class="ace-icon fa fa-chevron-left pull-right"
                data-icon-hide="ace-icon fa fa-chevron-down"
                data-icon-show="ace-icon fa fa-chevron-left"></i>
              <i class="ace-icon fa fa-sort-amount-desc"></i>
              <%= t "users.invite" %>
            </a>
          </div>
          <div class="panel-collapse collapse" id="faq-1-2"
            aria-expanded="true">
            <div class="panel-body">
              <%= form_tag invites_path, method: :get, format: :json  do %>
                <%= hidden_field_tag :group_id, @group.id %>
                <%= search_field_tag :search, nil, class: "form-control",
                  placeholder: "Search" %>
                <button class="invite-btn" type="submit">
                  <img alt="<%= t "layouts.holder" %>" class="search-icon"
                    src="/assets/search.png">
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if logged_in? %>
    <div class="row">
      <aside class="col-md-6">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
        <section class="micropost_form">
          <%= render "shared/post_form" %>
        </section>
      </aside>
    </div>
  <% end %>
  <div class="show-post">
    <div class="col-md-3"></div>
    <div class="col-md-8">
      <div class="posts">
        <%= render 'shared/feed_group' %>
      </div>
    </div>
  </div>
</div>
